{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  {{text}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/each}}

<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header">
      <h3>Editar Mapa</h3>
    </div>
    <div class="card-body">
      <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
          <input type="text" name="title" style="color: white;" class="form-control" value="{{note.title}}"/>
        </div>
        <div class="form-group">
          <textarea name="description" style="color: white;" class="form-control">{{note.description}}</textarea>
        </div>

         <div class="form-group">
          <textarea name="comments" style="color: white;" class="form-control">{{note.comments}}</textarea>
        </div>

        <div class="form-group">
          <select name="priority" class="form-control" style="color: white;">
            <option value="{{note.priority}}">{{note.priority}}</option>
            <option value="Baja">Baja</option>
            <option value="Media">Media</option>
            <option value="Alta">Alta</option>
          </select>
        </div>

        <div class="form-group">
          <select name="status" class="form-control" style="color: white;">
            <option value="{{note.status}}">{{note.status}}</option>
            <option value="Por Realizar">Por Realizar</option>
            <option value="En proceso">En proceso</option>
            <option value="Finalizada">Finalizada</option>
          </select>
        </div>

        <div class="form-group">
          <input type="url" name="pages" style="color: white;" class="form-control" value="{{note.pages}}"/>
        </div>

         <div class="form-group">
          <input type="email" name="email" style="color: white;" class="form-control" value="{{note.email}}"/>
        </div>

        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Guardar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
